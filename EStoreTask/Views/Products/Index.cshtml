

@model List<Product> ;
@{
    ViewData["Title"] = "Products";
    
}
<h2 class="text-center text-white bg-muted px-1 py-1">Prodcuts</h2>
@*------------------------------------------------------------ Start Add Product ------------------------------------------------*@

<div class ="container-fluid px-1 py-1 ">


<div class="input-group input-group-sm mb-3">
  <span class="input-group-text" id="inputGroup-sizing-sm">Product Name</span>
  <input type="text" id="Name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
</div>

<div class="input-group input-group-sm mb-3">
  <span class="input-group-text" id="inputGroup-sizing-sm">Quantity</span>
  <input type="number" id="Quantity" min="1" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
</div>


<div class="input-group input-group-sm mb-3">
  <span class="input-group-text" id="inputGroup-sizing-sm">Price</span>
  <input type="number" id="Price" min="1" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
</div>

 

</div>
@*------------------------------------------------------------End Add Product ------------------------------------------------*@

   <div class="d-flex justify-content-center">
        <button class="btn btn-primary" id="BtnFillTable" >Add New Product</button>
    </div>
    
@*------------------------------------------------------------Start Display Product ------------------------------------------------*@

<div class="container-fluid">
  <div class=" cart py-5" >
    <table class="table table-responsive  table-striped table-bordered table-hover text-center" >

      <thead class="table-dark ">
        <tr>
          <th>Product ID</th>
          <th>Product Name</th>
          <th> Quantity</th>
          <th> Price</th>
          <th >Operation</th>

        </tr>
      </thead>

      <tbody id="value">
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <button class='my-3' data-bs-toggle='modal'
                data-bs-target='#UpdateProductModal' > <i class='fa fas fa-edit'></i>
            </button>
                </td>

            </tr>
        }
               

      </tbody>

      </table>

       @if( TempData["ProductsStatus"].ToString() != "Load")
          {
                <div class="bg-danger mx-auto text-center fs-2 py-3 px-3 text-white">
                No Prodcuts  Found
            </div>

           }
           


      <hr class="border border-primary border-3 opacity-50">
  </div>

</div>

@*------------------------------------------------------------End Display Product ------------------------------------------------*@






 
        <!-- ******************************************Start Update product Model*********************************************************** -->

        <!-- upDate Data -->
        <div class="modal fade" id="UpdateProductModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog my-3">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Update Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        </button>
                    </div>
                    <div class="modal-body">

              
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">Name</span>
                                <input type="text"  class="form-control text-center"
                                    placeholder="Name" aria-describedby="basic-addon1" id="mName">
                            </div>
                
               
                            <div class="input-group mb-3">
                                <span class="input-group-text">Quantity</span>
                                <input type="number" class="form-control" min="1" id="mQuantity">
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text">Price</span>
                                <input type="number"  class="form-control" min="1" id="mPrice">
                            </div>


                            <div class="modal-footer container text-center bg-dark d-flex justify-content-center">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" >Close</button>
                                <button class="btn btn-success" >
                                    UPDATE
                                </button>
                            </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- ******************************************End Update product Model*********************************************************** -->

